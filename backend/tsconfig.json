{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "rootDir": "..",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*", "../src/*"],
      "types": ["types.ts", "types"]
    },
    "lib": ["ES2022"],
    "moduleResolution": "NodeNext",
    "typeRoots": [
      "../node_modules/@types", // Correct path to root node_modules
      "./src/types" // Local type declarations
    ]
  },
  "include": [
    "src/**/*.ts",
    "../types.ts",
    "../src/api/schemas/**/*.ts",
    "../src/types/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
